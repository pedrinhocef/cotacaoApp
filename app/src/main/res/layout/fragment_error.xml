<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gd_green_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="15dp"
        android:id="@+id/imageRefreshError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icn_refresh" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/touch_to_refresh_load_failed"
        android:textColor="@color/colorDarkGreyBlue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageRefreshError"
        app:layout_constraintStart_toStartOf="@+id/imageRefreshError"
        app:layout_constraintTop_toBottomOf="@+id/imageRefreshError" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_load_failed_touch"
        android:textColor="@color/colorDarkGreyBlue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

</android.support.constraint.ConstraintLayout>