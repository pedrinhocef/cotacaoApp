<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_error"
        layout="@layout/fragment_error"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_loading"
        layout="@layout/fragment_loading"
        android:visibility="gone" />

    <include
        android:id="@+id/toolbar_exchange"
        layout="@layout/toolbar_exchange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        tools:listitem="@layout/item_exchange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_exchange" />


</android.support.constraint.ConstraintLayout>